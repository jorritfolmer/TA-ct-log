{
    "meta": {
        "version": "1.0.0", 
        "restRoot": "TA_ct_log", 
        "name": "TA-ct-log", 
        "displayName": "TA-certificate-transparency-log for Splunk", 
        "apiVersion": "3.0.0"
    }, 
    "pages": {
        "inputs": {
            "table": {
                "header": [
                    {
                        "field": "name", 
                        "label": "Name"
                    }, 
                    {
                        "field": "interval", 
                        "label": "Interval"
                    }, 
                    {
                        "field": "index", 
                        "label": "Index"
                    }, 
                    {
                        "field": "disabled", 
                        "label": "Status"
                    }
                ], 
                "moreInfo": [
                    {
                        "field": "name", 
                        "label": "Name"
                    }, 
                    {
                        "field": "interval", 
                        "label": "Interval"
                    }, 
                    {
                        "field": "index", 
                        "label": "Index"
                    }, 
                    {
                        "field": "disabled", 
                        "label": "Status"
                    }, 
                    {
                        "field": "log_url", 
                        "label": "Certificate Log URL"
                    }
                ], 
                "actions": [
                    "edit", 
                    "enable", 
                    "delete", 
                    "clone"
                ]
            }, 
            "services": [
                {
                    "name": "ct_log", 
                    "entity": [
                        {
                            "required": true, 
                            "type": "text", 
                            "label": "Name", 
                            "field": "name", 
                            "help": "Enter a unique name for the data input", 
                            "validators": [
                                {
                                    "pattern": "^[a-zA-Z]\\w*$", 
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores.", 
                                    "type": "regex"
                                }, 
                                {
                                    "minLength": 1, 
                                    "errorMsg": "Length of input name should be between 1 and 100", 
                                    "type": "string", 
                                    "maxLength": 100
                                }
                            ]
                        }, 
                        {
                            "required": true, 
                            "type": "text", 
                            "label": "Interval", 
                            "field": "interval", 
                            "help": "Time interval of input in seconds.", 
                            "validators": [
                                {
                                    "pattern": "^\\-[1-9]\\d*$|^\\d*$", 
                                    "errorMsg": "Interval must be an integer.", 
                                    "type": "regex"
                                }
                            ]
                        }, 
                        {
                            "required": true, 
                            "defaultValue": "default", 
                            "options": {
                                "blackList": "^_.*$", 
                                "createSearchChoice": true, 
                                "endpointUrl": "data/indexes"
                            }, 
                            "type": "singleSelect", 
                            "label": "Index", 
                            "field": "index", 
                            "validators": [
                                {
                                    "minLength": 1, 
                                    "errorMsg": "Length of index name should be between 1 and 80.", 
                                    "type": "string", 
                                    "maxLength": 80
                                }
                            ]
                        }, 
                        {
                            "required": true, 
                            "type": "text", 
                            "label": "Certificate Log URL", 
                            "field": "log_url", 
                            "help": "The URL of the CT log, e.g. ct.googleapis.com/logs/argon2019/", 
                            "validators": [
                                {
                                    "minLength": 0, 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "type": "string", 
                                    "maxLength": 8192
                                }
                            ]
                        }
                    ], 
                    "title": "Certificate Transparency"
                }
            ], 
            "description": "Manage your data inputs", 
            "title": "Inputs"
        }, 
        "configuration": {
            "tabs": [
                {
                    "name": "logging", 
                    "entity": [
                        {
                            "field": "loglevel", 
                            "defaultValue": "INFO", 
                            "options": {
                                "autoCompleteFields": [
                                    {
                                        "label": "DEBUG", 
                                        "value": "DEBUG"
                                    }, 
                                    {
                                        "label": "INFO", 
                                        "value": "INFO"
                                    }, 
                                    {
                                        "label": "WARNING", 
                                        "value": "WARNING"
                                    }, 
                                    {
                                        "label": "ERROR", 
                                        "value": "ERROR"
                                    }, 
                                    {
                                        "label": "CRITICAL", 
                                        "value": "CRITICAL"
                                    }
                                ], 
                                "disableSearch": true
                            }, 
                            "type": "singleSelect", 
                            "label": "Log level"
                        }
                    ], 
                    "title": "Logging"
                }
            ], 
            "description": "Set up your add-on", 
            "title": "Configuration"
        }
    }
}